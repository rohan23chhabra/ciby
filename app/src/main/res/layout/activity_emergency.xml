<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="100"
    android:orientation="vertical"
    tools:context="com.waoss.ciby.EmergencyActivity">

    <View
        android:layout_height="0dp"
        android:layout_weight="20"
        android:layout_width="match_parent"></View>

    <Button
        android:text="See police stations"
        android:onClick="policeStationOnClick"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_weight="20"
        android:layout_height="0dp"
        android:id="@+id/police_station" />

    <View
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="20"></View>

    <Button
        android:text="See hospitals"
        android:onClick="hospitalOnClick"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:id="@+id/hospital"
        android:layout_weight="20" />

    <View
        android:layout_height="0dp"
        android:layout_weight="20"
        android:layout_width="match_parent"></View>

</LinearLayout>
